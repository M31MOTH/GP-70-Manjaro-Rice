! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.color-enabled: true
rofi.color-window: #37474f, #37474f, #37474f
rofi.color-normal: #263238, #8bc34a, #37474f, #9ccc65, #263238
rofi.color-active: #263238, #009688, #37474f, #26a69a, #263238
rofi.color-urgent: #263238, #ff9800, #37474f, #ffa74d, #263238

! ------------------------------------------------------------------------------
! ROFI Setup
! ------------------------------------------------------------------------------
rofi.font: Roboto Mono 18
rofi.modi: run,ssh
rofi.opacity: 80
rofi.width: 400
rofi.lines: 6
border.width: 20
rofi.bw: 0
rofi.terminal: xfce4-terminal
rofi.seperator-style: none
rofi.line-margine: 1
rofi.scrollbar-width: 0
rofi.fullscreen: false
